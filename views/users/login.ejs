<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post">
            <div class="mb-3">
                <label for="username" class="form-label needs-validation" novalidate>Username</label>
                <input type="text" name="username" id="Username" placeholder="enter Username" class="form-control" required/>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label needs-validation" novalidate>Password</label>
                <input type="password" name="password" id="password" placeholder="enter password" class="form-control" required/>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
        <br>
        <p class="offset-3">Do not have an account &nbsp;&nbsp;<a href="/signup" style="text-decoration: none;">create an account</a></p>
    </div>
</div>